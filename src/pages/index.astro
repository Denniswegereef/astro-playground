---
import Layout from "../layouts/Layout.astro";
import Link from "../components/link/link.astro";

import fg from 'fast-glob';
import path from 'path'

export const BLOG_PATH = path.join(process.cwd())

const collections: string[] = fg.sync(BLOG_PATH + "/src/pages/*", { onlyDirectories: false })

const routes = collections.map((collection) => {
  return collection.replace('./src/pages/', '/').replace('.astro', '')
})

---

<Layout title="Welcome to Astro.">
  <main>
    <ul>
      {
        routes.map((route) => (
          <li>
            <Link href={route} label={route} />
          </li>
        ))
      }
    </ul>
  </main>

  <style lang="scss"></style>
</Layout>
